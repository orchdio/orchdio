    "PlaylistConversionResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "The URL to the playlist",
              "example": "https://www.youtube.com/playlist?list=PL_dQw4w9WgXcQ"
            },
            "tracks": {
              "type": "object",
              "description": "The tracks in the playlist",
              "properties": {
                "deezer": {
                  "type": "array",
                  "$ref": "#/definitions/TrackObject"
                },
                "spotify": {
                  "type": "array",
                  "$ref": "#/definitions/TrackObject"
                },
                "tidal": {
                  "type": "array",
                  "$ref": "#/definitions/TrackObject"
                }
