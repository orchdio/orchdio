                        "example": "Daft Punk"
                    },
                    "id": {
                        "type": "string",
                        "description": "The ID of the track",
                        "example": "dQw4w9WgXcQ"
                    },
                    "cover": {
                        "type": "string",
                        "description": "The URL to the cover of the track",
                        "example": "https://i.scdn.co/image/ab67616d0000b273d8f8f8f8f8f8f8f8f8f8f8f8f8"
                    }
                  }
                }
              }
            }
          }
        },
        "message": {
          "type": "string",
          "description": "The message of the response",
          "example": "The track was successfully added to the playlist"
        },
        "status": {
          "type": "string",
          "description": "The status of the response",
          "example": "success"
        }
      },
      "example": {
        "url": "https://api.spotify.com/v1/playlists/1/tracks",
        "title": "Daft Punk",
        "artistes": [
          "Daft Punk"
        ]
      }
    },
    "PlaylistConversionResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "The URL to the playlist",
              "example": "https://www.youtube.com/playlist?list=PL_dQw4w9WgXcQ"
            },
            "tracks": {
              "type": "object",
              "description": "The tracks in the playlist",
              "properties": {
                "deezer": {
                  "type": "array",
                  "$ref": "#/definitions/TrackObject"
                },
                "spotify": {
                  "type": "array",
                  "$ref": "#/definitions/TrackObject"
                },
                "tidal": {
                  "type": "array",
                  "$ref": "#/definitions/TrackObject"
                }
              }
            },
            "length": {
              "type": "string",
              "description": "The length of the playlist",
              "example": "00:00:00"
            },
            "title": {
              "type": "string",
              "description": "The title of the playlist",
              "example": "Daft Punk"
            },
            "omitted_tracks": {
              "type": "object",
              "description": "The tracks that were omitted from the playlist",
              "properties": {
                "deezer": {
                  "type": "array",
                  "$ref": "#/definitions/TrackConversionResponse"
                },
                "spotify": {
                  "type": "array",
                  "$ref": "#/definitions/TrackConversionResponse"
                },
                "tidal": {
                  "type": "array",
                  "$ref": "#/definitions/TrackConversionResponse"
                }
              }
            },
            "owner": {
              "type": "string",
              "description": "The owner of the playlist",
              "example": "Daft Punk"
            },
            "cover": {
              "type": "string",
              "description": "The URL to the cover of the playlist",
              "example": "https://i.scdn.co/image/ab67616d0000b273d8f8f8f8f8f8f8f8f8f8f8f8f8"
            }
          }
        },
        "message": {
          "type": "string",
          "description": "The message of the response",
          "example": "The playlist was successfully converted"
        },
        "status": {
          "type": "string",
          "description": "The status of the response",
          "example": "success"
        }
      }
    },
    "TrackObject": {
      "type": "object",
      "description": "Represents a single track object",
      "properties": {
        "url": {
          "type": "string",
          "description": "The URL to the track on Deezer"
        },
        "artistes": {
          "type": "array",
          "description": "The artists that are on the track",
          "items": [{
            "type": "string",
            "description": "The name of the artist",
            "example": "Daft Punk"
          }
          ]
        },
        "released": {
          "type": "string",
          "description": "The date the track was released",
          "example": "2018-01-01"
        },
        "duration": {
          "type": "string",
          "description": "The duration of the track",
          "example": "00:00:00"
        },
        "explicit": {
          "type": "boolean",
          "description": "Whether the track is explicit or not",
          "example": true
        },
        "title": {
          "type": "string",
          "description": "The title of the track",
          "example": "Daft Punk"
        },
        "preview": {
          "type": "string",
          "description": "The URL to the preview of the track",
          "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
        },
        "album": {
          "type": "string",
          "description": "The album the track is on",
          "example": "Daft Punk"
        },
        "id": {
          "type": "string",
          "description": "The ID of the track",
          "example": "dQw4w9WgXcQ"
        },
        "cover": {
          "type": "string",
          "description": "The URL to the cover of the track",
          "example": "https://i.scdn.co/image/ab67616d0000b273d8f8f8f8f8f8f8f8f8f8f8f8f8"
        }
      }
    },
    "GenerateKeyResponse": {
      "type": "object",
      "properties": {
      "data": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "The generated key",
            "example": "some-uuid-here-sxsw"
          }
        }
      },
        "message": {
          "type": "string",
          "description": "The message of the response",
          "example": "The key was successfully generated"
        },
        "status": {
          "type": "string",
          "description": "The status of the response",
          "example": "success"
        }
      }
    },
