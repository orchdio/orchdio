                },
                "spotify": {
                  "type": "array",
                  "$ref": "#/definitions/TrackConversionResponse"
                },
                "tidal": {
                  "type": "array",
                  "$ref": "#/definitions/TrackConversionResponse"
                }
              }
            },
            "owner": {
              "type": "string",
              "description": "The owner of the playlist",
              "example": "Daft Punk"
            },
            "cover": {
              "type": "string",
              "description": "The URL to the cover of the playlist",
              "example": "https://i.scdn.co/image/ab67616d0000b273d8f8f8f8f8f8f8f8f8f8f8f8f8"
            }
          }
        },
        "message": {
          "type": "string",
          "description": "The message of the response",
          "example": "The playlist was successfully converted"
        },
        "status": {
          "type": "string",
          "description": "The status of the response",
          "example": "success"
        }
      }
    },
