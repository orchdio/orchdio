    "AddWebhookResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "description": "The message of the response",
          "example": "The webhook was successfully added"
        },
        "status": {
          "type": "string",
          "description": "The status of the response",
          "example": "success"
        }
      },
      "example": {
        "message": "The webhook was successfully added",
        "status": 201
      }
    },
    "AddWebhookBody": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "The URL to the webhook",
          "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
        },
        "verify_token": {
          "type": "string",
          "description": "The token to be used to verify the webhook",
          "example": "dQw4w9WgXcQ"
        }
      }
    }
  }
