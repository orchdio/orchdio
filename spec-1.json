              },
              "platforms": {
                "type": "object",
                "properties": {
                  "deezer": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "description": "The URL to the track on Deezer"
                      },
                      "artistes": {
                        "type": "array",
                        "description": "The artists that are on the track",
                        "items":
                          {
                          "type": "string",
                          "description": "The name of the artist",
                          "example": "Daft Punk"
                        }

                      },
                      "released": {
                        "type": "string",
