      "PlaylistConversionResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "The URL to the playlist",
                "example": "https://www.youtube.com/playlist?list=PL_dQw4w9WgXcQ"
              },
              "tracks": {
                "type": "object",
                "description": "The tracks in the playlist",
                "properties": {
                  "deezer": {
                    "$ref": "#/components/schemas/TrackObject"
                  },
                  "spotify": {
                    "$ref": "#/components/schemas/TrackObject"
                  },
                  "tidal": {
                    "$ref": "#/components/schemas/TrackObject"
                  }
                }
              },
              "length": {
                "type": "string",
                "description": "The length of the playlist",
                "example": "00:00:00"
              },
              "title": {
                "type": "string",
                "description": "The title of the playlist",
                "example": "Daft Punk"
              },
              "omitted_tracks": {
                "type": "object",
                "description": "The tracks that were omitted from the playlist",
                "properties": {
                  "deezer": {
                  },
                  "spotify": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "description": "The URL to the track",
                        "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                      },
                        "artistes": {
                            "type": "array",
                            "description": "The artists that are on the track",
                            "items":
                              {
                              "type": "string",
                              "description": "The name of the artist",
                              "example": "Daft Punk"
                              }

                        }
                    }
                  },
                  "tidal": {
                    "$ref": "#/components/schemas/TrackObject"
                  }
                }
              },
              "owner": {
                "type": "string",
                "description": "The owner of the playlist",
                "example": "Daft Punk"
              },
              "cover": {
                "type": "string",
                "description": "The URL to the cover of the playlist",
                "example": "https://i.scdn.co/image/ab67616d0000b273d8f8f8f8f8f8f8f8f8f8f8f8f8"
              }
            }
          },
          "message": {
            "type": "string",
            "description": "The message of the response",
