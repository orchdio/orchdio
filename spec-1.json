{
  "openapi": "3.1.0",
  "info": {
    "title": "Orchdio API Spec v1",
    "description": "This is the api specification for the Orchdio API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https"
    }
  ],
  "paths": {
    "/api/v1/{platform}/connect": {
      "description": "Connect to a platform",
      "summary": "Connect to a platform",
      "get": {
        "description": "Returns the redirect URL for the platform in order to authenticate the user on the target platform",
        "responses": {
          "200": {
            "description": "Successful response",
            "headers": {
              "application/json": {
                "description": "Successful response",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConnectPlatformResponse"
                }
              }
            }
          },
            "400": {
                "description": "Bad request",
                "headers": {
                "application/json": {
                    "description": "Bad request",
                    "schema": {
                    "type": "string"
                    }
                }
                },
                "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
                }
            }
        }
      },
      "parameters": [
        {
          "name": "platform",
          "in": "path",
          "description": "The platform to connect to",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ]
    },
    "/api/v1/track/convert": {
      "post": {
        "description": "Returns the converted track",
        "parameters": [
          {
            "name": "x-orchdio-key",
            "in": "header",
            "description": "The Orchdio key",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "headers": {},
            "content": {
                "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/TrackConversionResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "link",
          "in": "query",
          "description": "The link to the track to convert",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "x-orchdio-key",
          "in": "header",
          "description": "The Orchdio key",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ]
    },
    "/api/v1/playlist/convert": {
      "post": {
        "description": "Converts a playlist",
        "requestBody": {
            "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string",
                        "example": "https://www.youtube.com/playlist?list=PLFgquLnL59alCl_2TQvOiD5Vgm1hCaGSI",
                        "description": "The URL of the playlist to convert"
                      }
                    }
                  }
                }
            },
            "description": "The playlist to convert",
            "required": true
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/PlaylistConversionResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    },
    "/api/v1/generate-key": {
      "post": {
        "description": "Generates a new key",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/GenerateKeyResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    },
    "/api/v1/key/revoke": {
      "patch": {
        "description": "Revokes a key",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/RevokeKeyResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    },
    "/api/v1/key/allow": {
      "patch": {
        "description": "Allows a key",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/AllowKeyResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    },
    "/api/v1/key/delete": {
      "delete": {
        "description": "Deletes a key",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/DeleteKeyResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    },
    "/api/v1/webhook/add": {
      "post": {
        "description": "Adds a webhook",
        "security": [
          {
            "x-orchdio-key": []
          }
        ],
        "parameters": [
          {
            "name": "Bearer access_token",
            "in": "header",
            "description": "The access token of the user. ⚠️ This endpoint is available only to Orchdio as developers cannot generate access tokens yet.",
            "required": true,
            "schema": {
                "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/AddWebhookResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    },
    "/api/v1/webhook": {
      "get": {
        "description": "Gets all webhooks",
        "parameters": [
          {
            "name": "x-orchdio-key",
            "in": "header",
            "description": "The orchdio key",
            "required": true,
            "schema": {
                "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/GetWebhooksResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    },
    "/api/v1/task/{taskId}": {
      "parameters": [
        {
          "name": "taskId",
          "in": "path",
          "description": "The task ID",
          "required": true,
          "schema": {
              "type": "string"
          }
        }
      ],
      "get": {
        "description": "Gets a task, for example, a playlist conversion request",
        "parameters": [
          {
            "name": "x-orchdio-key",
            "in": "header",
            "description": "The orchdio key",
            "required": true,
            "schema": {
                "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/GetTaskResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      },
      "delete": {
        "description": "Deletes a task",
        "parameters": [
          {
            "name": "x-orchdio-key",
            "in": "header",
            "description": "The orchdio key",
            "required": true,
            "schema": {
                "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/DeleteKeyResponse"
                    }
                }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
                "application/json": {
                    "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                    }
                }
            }
          }
        }
      }
    }
    },
  "components": {
    "schemas": {
      "ConnectPlatformResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "example": "https://accounts.spotify.com/authorize?client_id=8d367c0bbfe142d494bcbf1cf2e30f06&redirect_uri=https%3A%2F%2Fstudents-well-operators-steering.trycloudflare.com%2Fapi%2Fv1%2Fspotify%2Fauth&response_type=code&scope=user-read-private+user-library-read+user-read-email&state=274282a8-1da5-11ed-9ecb-e6171390459d"
              }
            }
          },
          "message": {
            "type": "string",
            "example": "Request Ok",
            "description": "This is an accompanying message to the response"
          },
          "status": {
            "type": "integer",
            "example": 200,
            "description": "This is the status of the response. Its the same as the HTTP status"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Bad request",
            "description": "This is an accompanying message to the response"
          },
          "status": {
            "type": "integer",
            "example": 400,
            "description": "This is the status of the response. Its the same as the HTTP status"
          },
          "error": {
            "type": "string",
            "example": "Bad request",
            "description": "Invalid parameters passed"
          }
        }
      },
